<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#f7f7f7"
    >
    <!--@drawable/family_member_notification_bg"-->


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingTop="0dp"
        android:text="Patient forgot:"
        android:textColor="#FFFE6691"
        android:textSize="38sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:typeface="sans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#fefefe"
        android:weightSum="1.0"
        android:layout_weight="0.02">

        <TextView
            android:id="@+id/title"
            style="?android:textAppearanceSmallInverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:gravity="left|bottom"
            android:padding="20dp"
            android:textColor="#656363"
            android:textSize="35sp"
            android:text="Feed Dog"

            android:textIsSelectable="false"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#656363"
                android:textSize="35sp"
                android:text="3:00"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#656363"
                android:textSize="15sp"
                android:text="PM"
                android:layout_gravity="center_horizontal"
                android:typeface="sans" />

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/view_dropshadow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingTop="0dp"
        android:text="10 minutes ago!"
        android:textColor="#FFFE6691"
        android:textSize="38sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:typeface="sans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />



    <Button
        android:id="@+id/btn_call_them"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#fefefe"
        android:text="Call Them"
        android:textAllCaps="false"
        android:textColor="#FFFE6691"
        android:textSize="38sp"
        android:layout_weight="0.07"
        android:typeface="sans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"

        android:background="@drawable/view_dropshadow" />

    <Button
        android:id="@+id/btn_theyre_OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#fefefe"
        android:text="They're OK"
        android:textAllCaps="false"
        android:textColor="#FFFE6691"
        android:textSize="38sp"
        android:layout_weight="0.07"
        android:typeface="sans"
        android:allowUndo="true" />



    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/view_dropshadow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01" />

</LinearLayout>